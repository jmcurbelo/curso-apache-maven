  <!-- Un perfil sencillo en Maven -->  
  <profile>
    <id>dev</id>
    <activation>
      <activeByDefault>false</activeByDefault>
    </activation>
  </profile>

  <!-- Un perfil que se activa segÃºn el sistema operativo que tengamos instalado, en este caso Windows -->
  <profile>
    <activation>
    <os>
    <family>Windows</family>
    </os>
    </activation>
  </profile>

  </profiles>


</project>